{
  "name": "ts-boilerplate",
  "version": "2.1.0",
  "description": "TypeScript boilerplate for TDD development.",
  "scripts": {
    "build": "tsc --project src/tsconfig.app.json",
    "build:watch": "tsc --project src/tsconfig.app.json --watch",
    "lint": "eslint ./src",
    "test": "tsc --noEmit -p . && jest --no-cache",
    "test:watch": "tsc --noEmit -p . && jest --no-cache --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/metaloha/ts-boilerplate.git"
  },
  "keywords": [
    "typescript",
    "tdd",
    "boilerplate"
  ],
  "author": "Russel Porosky <russel@metaloha.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/metaloha/ts-boilerplate/issues"
  },
  "homepage": "https://github.com/metaloha/ts-boilerplate#readme",
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.2.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsdoc": "^37.0.3",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "jest": "^27.3.1",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  },
  "dependencies": {},
  "jest": {
    "transform": {
      ".ts": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  }
}
